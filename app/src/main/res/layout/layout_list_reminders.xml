<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="175dp"
    android:gravity="center_vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:background="@drawable/circle">

            <TextView
                android:id="@+id/textview_reminder_list_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:fontFamily="sans-serif-light"
                android:paddingTop="8dp"
                android:layout_gravity="center_horizontal"
                android:textSize="50sp"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/textview_reminder_list_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MAR"
                android:layout_gravity="center_horizontal"
                android:textSize="20sp"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <TextView
            android:id="@+id/textview_reminder_list_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:30 AM"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"
            android:textColor="#454545"
            android:textSize="15sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:paddingLeft="16dp"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/textview_reminder_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:ellipsize="marquee"
            android:paddingTop="8dp"
            android:textSize="30sp"
            android:textColor="#454545"
            android:fontFamily="sans-serif-light" />

        <TextView
            android:id="@+id/textview_reminder_list_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descriptionwefwefwefwefwefwefwefwefewfefwfwefwefwefwefwef"
            android:paddingBottom="8dp"
            android:textSize="20sp"
            android:ellipsize="end"
            android:textColor="#666666"
            android:fontFamily="sans-serif-light" />

    </LinearLayout>

</LinearLayout>