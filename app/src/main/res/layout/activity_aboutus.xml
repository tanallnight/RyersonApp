<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.prototype.ryersonapp"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="3" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="400dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@drawable/card_round" >
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:fontFamily="sans-serif-light"
            android:text="@string/team"
            android:textColor="#454545"
            android:textSize="30sp" />

        <com.viewpagerindicator.UnderlinePageIndicator
            android:id="@+id/viewpager_indicator_aboutus"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_margin="16dp"
            android:background="?android:attr/listDivider"
            app:fades="false"
            app:selectedColor="#3f51b5" />

        <android.support.v4.view.ViewPager
            android:id="@+id/pager_aboutus_team"
            android:layout_width="fill_parent"
            android:paddingLeft="8dp"
            android:paddingRight="25dp"
            android:clipToPadding="false"
            android:layout_height="@dimen/aboutus_team_height"
            android:layout_marginBottom="16dp" />
    </LinearLayout>

</ScrollView>