<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.prototype.ryersonapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AboutUsActivity"
            android:label="@string/aboutus"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".PreferencesActivity"
            android:label="@string/Preferences"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".ExploreActivity"
            android:label="Explore"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Reminders.RemindersActivity"
            android:label="@string/Reminders"
            android:parentActivityName=".MainActivity" />

        <receiver android:name=".Reminders.RemindersReceiver" />
    </application>


</manifest>
